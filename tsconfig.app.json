{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "outDir": "./dist/out-tsc/app"
  },
  "files": [
    "src/main.ts",
    "src/polyfills.ts"
  ],
  "include": [
    "src/**/*.d.ts",
    "src/app/**/!(*.spec|*.test).ts",
    "src/env-loader.ts"
  ],
  "exclude": [
    "src/app/**/*.server.ts",
    "server.ts",
    "src/main.server.ts",
    "src/test.ts"
  ]
}